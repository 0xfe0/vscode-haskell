// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": {
        "owner": "typescript",
        "applyTo": "closedDocuments",
        "fileLocation": ["absolute"],
        "pattern": {
          "regexp": "<nothing>"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Compilation (.*?)startingâ€¦"
          },
          "endsPattern": {
            "regexp": "Compilation (.*?)finished"
          }
        }
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
